<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1000 seconds">
	<timestamp key="date" datePattern="yyyyMMdd" />
	<!-- Output to Console -->
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %c:%L - %msg%n</pattern>
			<!--<charset>UTF-8</charset>-->
			<charset class="java.nio.charset.Charset">GBK</charset>
		</encoder>
	</appender>
	<!-- Output to File -->
	<appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>/logs_files/ffast/ffast.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>
				/logs_files/ffast/ffast.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<!-- keep 1 days worth of history -->
			<MaxHistory>10</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %c:%L - %msg%n</pattern>
			<charset>UTF-8</charset>
			<charset class="java.nio.charset.Charset">GBK</charset>
		</encoder>
	</appender>
	<!-- 打印级别，大小写无关：TRACE, DEBUG, INFO, WARN, ERROR, ALL 和  OFF 默认是DEBUG -->
	<root level="ERROR">
		<appender-ref ref="Console" />
		<appender-ref ref="File" />
	</root>
	<logger name="org.springframework" level="DEBUG" />
	<logger name="cn.ffast" level="DEBUG" />
	<logger name="org.springframework.scheduling" level="info"></logger>
</configuration>